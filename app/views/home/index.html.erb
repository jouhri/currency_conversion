<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<%= form_tag(convertion_path, method: :post) do%>
	<select name="currency_in" >
		<% @res.each do |currency|%>
			<option value="<%=currency[0]%>"><%= currency[0]%></option>
		<%end%>
	</select>
	<input type="number" name="amount">
	<select name="currency_out" >
		<% @res.each do |currency|%>
			<option value="<%=currency[0]%>"><%= currency[0]%></option>
		<%end%>
	</select>
	<%= submit_tag("convertion")%>
<%end%>
